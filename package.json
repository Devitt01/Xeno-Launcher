{
  "name": "xeno-launcher",
  "version": "1.0.0",
  "description": "Xeno Launcher",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "skin-hub": "node skin-hub-server.js",
    "clean:dist": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "build:asar-asset": "node scripts/export-update-asar.js",
    "build:win": "electron-builder --win nsis --publish never",
    "build:win:clean": "npm run clean:dist && electron-builder --win nsis --publish never",
    "build:portable": "npm run clean:dist && electron-builder --win portable --publish never --config.win.artifactName=XenoLauncher-Portable-${version}.exe",
    "build:release:win": "npm run clean:dist && electron-builder --win nsis --publish never && npm run build:asar-asset && electron-builder --win portable --publish never --config.win.artifactName=XenoLauncher-Portable-${version}.exe"
  },
  "author": "Devitt",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Devitt01/Xeno-Launcher.git"
  },
  "dependencies": {
    "minecraft-launcher-core": "^3.14.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.xeno.launcher",
    "productName": "Xeno Launcher",
    "icon": "build/icon.ico",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache/**",
      "!skin-hub-data/**",
      "!cloudflared.exe",
      "!*.log"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis",
      "artifactName": "XenoLauncher-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Devitt01",
        "repo": "Xeno-Launcher",
        "releaseType": "release"
      }
    ]
  }
}
